<div class="container text-center">
    <form action="/ToyShop/add" method="post" class="card p-3 bg-light text-center">
        <h2 class="text text-primary">Add New Toy</h2>
        <div class="form-group">
            <label class="text-success h3">Toy Name</label>
            <input class="form-control" type="text" name="name" required minlength="3" maxlength="20">
        </div>
        <div class="form-group mt-3">
            <label class="text-success h3">Toy Type</label>
            <select name="type" class="form-control">
                <option value="">Select Toy Type</option>
                <option value="Gundam">Gundam</option>
                <option value="LBX">LBX</option>
            </select>
        </div>
        <div class="form-group mt-3">
            <label class="text-success h3">Toy Code</label>
            <input class="form-control" type="text" name="code" required minlength="3" maxlength="20">
        </div>
        <div class="form-group mt-3">
            <label class="text-success h3">Toy Price</label>
            <input class="form-control" type="number" name="price" required min="1" max="500">
        </div>
        <div class="form-group mt-3">
            <label class="text-success h3">Toy Image</label>
            <input class="form-control" type="text" name="image" required>
        </div>
        <div class="form-group mt-3">
            <input class="btn btn-primary mt-3" type="submit" value="Add">
        </div>
    </form>
</div>