<div class="container col-md-8 mt-5">
    <form action="/ToyShop/add" method="post" class="card p-3 bg-light text-center">
        <h2 class="text text-primary">Add New Toy</h2>
        <div class="form-group">
            <label class="text-success h6">Toy Name</label>
            <input class="form-control" type="text" name="name" required minlength="3" maxlength="20">
        </div>
        <div class="form-group mt-3">
            <label class="text-success h6">Toy Type</label>
            <input class="form-control" type="text" name="type" required minlength="3" maxlength="20">
        </div>
        <div class="form-group mt-3">
            <label class="text-success h6">Toy Code</label>
            <input class="form-control" type="text" name="code" required minlength="3" maxlength="20">
        </div>
        <div class="form-group mt-3">
            <label class="text-success h6">Toy Price</label>
            <input class="form-control" type="number" name="price" required min="1" max="50">
        </div>
        <div class="form-group mt-3">
            <label class="text-success h6">Toy Image</label>
            <input class="form-control" type="text" name="image" required>
        </div>
        <div class="form-group mt-3">
            <input class="btn btn-primary mt-3" type="submit" value="Add">
        </div>
    </form>
</div>